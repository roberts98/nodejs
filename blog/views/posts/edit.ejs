<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1 id="new-post">Edit <%= post.name %></h1>
        <div class="cont">
            <form action="/post/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="post[name]" class="form-control" value="<%= post.name %>">
                </div>
                <div class="form-group">
                    <textarea name="post[content]" class="form-control" rows="7"><%= post.content %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info">submit</button>
                </div>
            </form>    
        </div>
    </div>
</div>

<% include ../partials/footer %>